<%= form_for(user) do |f| %>
  <div class="row">
    <div class="col-md-12">
      <% if user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
            <% user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="form-group">  
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
      </div>
    </div>  
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="form-group">  
        <%= f.label :description %>
        <%= f.text_area :description, class: "form-control", placeholder: "Description", size: "10x5"%>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">  
        <%= f.label :twitter_account, "Twitte account *" %>
        <%= f.text_field :twitter_account, class: "form-control", placeholder: "Twitter account" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">  
        <%= f.label :profile_image %>
        <%= f.file_field :profile_image, class: "form-control", multipart: true %>
      </div>
    </div>
  </div>
  <div class="actions">
    <%= f.submit "Submit", class: "btn btn-lg btn-default" %>
  </div>
<% end %>
